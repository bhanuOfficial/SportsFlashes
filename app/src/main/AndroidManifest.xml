<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supersports.sportsflashes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.application.SFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_sf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sf_circle"
        android:supportsRtl="true"
        android:theme="@style/SF_Theme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.activites.SearchActivity"></activity>
        <activity
            android:name=".view.activites.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".view.activites.MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".common.application.AppFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />
    </application>

</manifest>