<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include layout="@layout/dashboard_full_image_show" />

    <LinearLayout
        android:id="@+id/playActionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/large_padding">

            <ImageView
                android:id="@+id/playCurrentShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_play_arrow" />

            <LinearLayout
                android:id="@+id/showTitleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x_medium_padding">

                <TextView
                    android:id="@+id/showTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/xx_small_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_size" />

                <TextView
                    android:id="@+id/showDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/xx_small_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/small_size" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share"
        android:layout_below="@+id/playActionContainer"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/show_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/share"
            android:layout_below="@+id/playActionContainer"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_padding"
            android:paddingTop="@dimen/xx_small_padding"
            android:paddingRight="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding"
            android:visibility="visible">

            <TextView
                android:id="@+id/showDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/medium_light_gray"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/readMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Read More"
                android:textColor="@color/medium_light_gray"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />




            <TextView
                android:id="@+id/reminderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xx_large_margin"
                android:drawableLeft="@drawable/ic_baseline_alarm"
                android:drawablePadding="@dimen/small_padding"
                android:text="@string/set_reminder"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xx_large_margin"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:drawablePadding="@dimen/small_padding"
        android:layout_above="@+id/moreEpisodesContainer"
        android:text="@string/share"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingBottom="@dimen/small_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_size"
        android:layout_marginBottom="@dimen/medium_margin"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/moreEpisodesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:background="@color/medium_light_gray" />

        <TextView
            android:id="@+id/moreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/more_episodes"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/see_all"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_below="@+id/moreTv"
            android:id="@+id/moreEpisodesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
