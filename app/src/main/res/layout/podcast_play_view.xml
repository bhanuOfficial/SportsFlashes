<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/radio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/medium_dark_gray"
    android:clickable="true"
    android:focusable="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="?actionBarSize"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <ImageView
        android:id="@+id/podcast_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent" />

    <RelativeLayout
        android:id="@+id/podcast_actionView_opened"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/showIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            app:civ_border_width="1dp"
            app:civ_shadow="true" />

        <LinearLayout
            android:id="@+id/drag_podcast_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/podcast_actionView"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:gravity="center"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding">

        <RelativeLayout
            android:id="@+id/podcast_play_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/mediaActionButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/play_button"
                android:clickable="false" />

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/smallSeekBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                app:cs_circle_color="@color/medium_light_gray"
                app:cs_circle_progress_color="@color/black"
                app:cs_circle_stroke_width="3dp"
                app:cs_pointer_color="@color/sf_red"
                app:cs_pointer_stroke_width="1dp" />

            <View
                android:id="@+id/play"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/drag_podcast_view"
            android:layout_toRightOf="@id/podcast_play_status"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_padding">

            <TextView
                android:id="@+id/showName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x_medium_size" />

            <TextView
                android:id="@+id/showDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_light_gray"
                android:textSize="@dimen/medium_size" />
        </LinearLayout>
aa
        <LinearLayout
            android:id="@+id/drag_podcast_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_up_24" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showNameRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:padding="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/large_size" />

        <TextView
            android:id="@+id/rjNameRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_size" />

        <TextView
            android:id="@+id/showTimeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center_vertical|center"
            android:padding="@dimen/medium_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/x_medium_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/largeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_large_margin"
                app:cs_circle_color="@color/medium_light_gray"
                app:cs_circle_progress_color="@color/black"
                app:cs_circle_stroke_width="14dp"
                app:cs_pointer_color="@color/sf_red"
                app:cs_pointer_stroke_width="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:text="Live Radio"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/largeSeekBar"
                app:layout_constraintStart_toStartOf="@+id/largeSeekBar"
                app:layout_constraintTop_toTopOf="@+id/largeSeekBar"
                app:layout_constraintVertical_bias="0.3" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_corner_background_gray"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/xx_small_padding"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/largeSeekBar"
                app:layout_constraintStart_toStartOf="@+id/largeSeekBar"
                app:layout_constraintTop_toTopOf="@+id/largeSeekBar">

                <TextView
                    android:id="@+id/backwardRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/xx_small_padding"
                    android:text="-20 sec"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_size" />

                <ImageView
                    android:id="@+id/play_podcast"
                    android:layout_width="@dimen/circle_size"
                    android:layout_height="@dimen/circle_size"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/largeSeekBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/largeSeekBar" />

                <TextView
                    android:id="@+id/forwardRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/xx_small_padding"
                    android:text="+20 sec"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <abak.tr.com.boxedverticalseekbar.BoxedVertical
        android:id="@+id/volumeController"
        android:layout_width="20dp"
        android:visibility="gone"
        android:layout_height="150dp"
        android:layout_above="@+id/volumeContainer"
        android:layout_gravity="center"
        android:layout_marginStart="35dp"
        app:backgroundColor="@color/color_background"
        app:imageEnabled="false"
        app:libCornerRadius="10"
        app:progressColor="@color/color_progress"
        app:textBottomPadding="20"
        app:textColor="@color/red"
        app:textEnabled="true"
        app:textSize="12sp"
        app:touchDisabled="true" />

    <RelativeLayout
        android:id="@+id/volumeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/medium_dark_gray"
        android:padding="@dimen/small_padding">

        <ImageView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/large_margin"
            android:background="@drawable/ic_baseline_volume_up_white"
            android:padding="@dimen/medium_padding" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_margin"
            android:background="@drawable/ic_baseline_share_white"
            android:padding="@dimen/medium_padding" />
    </RelativeLayout>


</RelativeLayout>
