<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/scheduleItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/showImage"
            android:layout_width="150dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:paddingLeft="@dimen/x_small_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/showImage"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/onAir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_button_white"
                    android:padding="@dimen/xx_small_padding"
                    android:text="On air"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/showTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/x_small_padding"
                    android:maxLines="1"
                    android:paddingTop="@dimen/xx_small_padding"
                    android:paddingBottom="@dimen/xx_small_padding"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_size" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/xx_small_padding"
                android:text=""
                android:id="@+id/showTittle"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/xx_small_padding"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/small_size" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
